<div class="row">
  <div class="col-md-3">
    <div class="card card-block text-xs-center">
      <%= link_to 'View My Profile', user_path(current_user.id), class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="col-md-9">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title text-xs-center">Your Profile</h4>
      </div>
      <div class="card-block">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render 'shared/devisemes' %>

            <div class="form-group">
              <%= f.text_field :fullname, autofocus: true, class: 'form-control', placeholder: 'Full Name' %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
            </div>

            <div class="form-group">
              <%= f.text_field :phone_number, autofocus: true, class: 'form-control', placeholder: 'Phone Number' %>
            </div>

            <div class="form-group">
              <%= f.text_area :description, rows: 5, autofocus: true, class: 'form-control', placeholder: 'Let introduce yourself' %>
            </div>

            <%= f.submit "Update", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>

  </div>
</div>