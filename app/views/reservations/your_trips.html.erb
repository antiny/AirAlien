<div class="row">
  <div class="col-md-3">
    <div class="list-group">
      <%= link_to "Your Rooms", rooms_path, class: 'list-group-item' %>
      <%= link_to "Your Reservations", rooms_path, class: 'list-group-item' %>
      <%= link_to "Your Trips", your_trips_path, class: 'list-group-item active' %>
    </div>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <h4>Your Trips</h4>
      </div>
      <div class="card-block">
        <%	@trips.each do |trip| %>
          <div class="row">
            <div class="col-md-2">
              <%= trip.start_date.strftime('%v') %>
            </div>
            <div class="col-md-6">
              <%= link_to room_path(trip.room) do %>
                <%= image_tag trip.room.photos[0].image.url() if trip.room.photos.length > 0 %>
              <% end %>
            </div>
            <div class="col-md-2">
              <%= link_to user_path(trip.room.user) do %>
                <%= image_tag avatar_url(trip.room.user), class: 'img-circle avatar-medium pull-right' %>
              <% end %>
            </div>
            <div class="col-md-2 text-xs-right">
              <h4>$ <%= trip.total %></h4>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>

</div>